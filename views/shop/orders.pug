extends ../layouts/main-layout

block style
    link(rel='stylesheet', href='/css/orders.css')

block content
    if orders.length <= 0
        h1 Nothing Here
    else
        ul.orders
            each order in orders
                li.orders__item
                    h1 Order - #{order._id}
                    ul.orders__products
                        each product in order.items
                            li.orders__products-item #{product.title} (#{product.quantity})