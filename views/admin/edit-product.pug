extends ../layouts/main-layout

block style
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if editing === false
            form.product-form(action="/admin/add-product", method="POST")
                div.form-control
                    label(for="title") Title
                    input(type="text" name="title" id="title")
                div.form-control
                    label(for="imageUrl") Image Url
                    input(type="text" name="imageUrl" id="imageUrl")
                div.form-control
                    label(for="price") Price
                    input(type="number" name="price" id="price" step='0.01')
                div.form-control
                    label(for="description") Description
                    textarea(name='description', id='description', rows='5')
                button.btn(type="submit") Add Product
        else
            form.product-form(action="/admin/edit-product", method="POST")
                div.form-control
                    label(for="title") Title
                    input(type="text" name="title" id="title" value=product.title)
                div.form-control
                    label(for="imageUrl") Image Url
                    input(type="text" name="imageUrl" id="imageUrl" value=product.imageUrl)
                div.form-control
                    label(for="price") Price
                    input(type="number" name="price" id="price" step='0.01' value=product.price)
                div.form-control
                    label(for="description") Description
                    textarea(name='description', id='description', rows='5') #{product.description}
                input(type='hidden', name='productId', value=product.id)
                button.btn(type="submit") Edit Product